{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {% if items | length > 0 %}
                    <div class="cart-table">
                        <table>
                            <thead>
                            <tr>
                                <th>Image</th>
                                <th class="p-name">Produit</th>
                                <th>prix</th>
                                <th>Quantité</th>
                                <th>Total</th>
                                <th><i class="ti-close"></i></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in items %}
                                <tr>
                                    <td class="cart-pic first-row"><img
                                                src="{{ asset('uploads/files/'~ item.product.image ) }}" height="100"
                                                width="100" alt=""></td>
                                    <td class="cart-title first-row">
                                        <h6>{{ item.product.name }}</h6>
                                    </td>
                                    <td class="p-price first-row">{{ item.product.price | number_format(0,""," ") }} </td>
                                    <td class="qua-col first-row">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                {{ item.quantity }}
                                            </div>
                                        </div>
                                    </td>
                                    <td class="total-price first-row">{{ (item.product.price * item.quantity) | number_format(0,""," ") }}</td>
                                    <td> <a href="{{ path('cart_remove',{'id': item.product.id}) }}"> x </a></td>
                                    <td class="close-td first-row"><i class="ti-close"></i></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="cart-buttons">
                                <a href="{{ path('product_home') }}" class="primary-btn continue-shop">Continuer vos
                                    achats</a>
                                <a href="#" class="primary-btn up-cart">Mettre a jour</a>
                            </div>
                        </div>
                        <div class="col-lg-3 offset-lg-3">
                            <div class="proceed-checkout">
                                <ul>
                                    <li class="cart-total">Total <span>{{ total | number_format(0,""," ") }} Dt</span>
                                    </li>
                                </ul>
                                <a href="#" class="proceed-btn">Valider votre commande</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% else %}
                    <p> Surprise, C'est vide</p>
                {% endif %}
            </div>
        </div>
    </section>
    <!-- Shopping Cart Section End -->

    <!-- ##### Footer Area Start ##### -->
    <footer class="footer_area clearfix">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>Copyright &copy;<script>document.write(new Date().getFullYear());</script>
                        A9dhili Express Tous droits réservés
                    </p>
                </div>
            </div>

        </div>
    </footer>
    <!-- ##### Footer Area End ##### -->


{% endblock %}
